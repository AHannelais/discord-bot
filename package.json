{
    "name": "discord-bot",
    "version": "1.0.0",
    "description": "simple discord bot",
    "main": "src/index.ts",
    "scripts": {
        "start": "node -r ts-node/register ./src/index.ts",
        "dev": "nodemon",
        "build": "tsc",
        "prod": "node ./dist/index.js"
    },
    "nodemonConfig": {
        "ignore": [
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "npm start",
        "ext": "ts"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "discord.js": "^12.3.1"
    },
    "devDependencies": {
        "eslint": "^7.8.1",
        "eslint-plugin-import": "^2.22.0",
        "nodemon": "^2.0.4",
        "prettier": "^2.1.1",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    }
}
